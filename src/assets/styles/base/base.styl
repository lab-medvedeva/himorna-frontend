body
	position relative
	min-width 320px
	width 100%
	color #1c1c1c
	font-weight 400
	transition 1s background
	background-color white
	min-width 1024px
	// -webkit-font-smoothing none
  // -webkit-tap-highlight-color rgba(0, 0, 0, 0)

	&.fixed
		overflow hidden


html
	font-family Roboto, Arial, sans-serif
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	margin-left auto
	margin-right auto



.wrap
	position relative
	padding 0 30px
	width 100%
	margin-left auto
	margin-right auto
	max-width 1460px
	+to-width(767px)
		padding 0 15px


.main
	display flex
	flex-direction column
	min-height 100vh
	overflow hidden
	position relative
	padding-bottom 88px

.hidden
	opacity 0
	pointer-events none

h2
	font-size 32px
	font-weight 500
	line-height 38px
	padding-bottom 30px

h4
	font-size 24px
	font-weight 500
	line-height 30px
	padding-bottom 30px


p.text
	font-size 18px
	line-height 30px
	color #7C7C7C
	padding-bottom 30px

.button
	padding 13px 30px
	border-radius 8px
	cursor pointer
	background $orange
	float left
	center()
	t()
	font-size 14px
	font-weight 600
	color white
	letter-spacing 0.5px
	border none
	&:hover
		box-shadow 0 0 15px #FE5C78
	
	&.violet
		background linear-gradient(93.28deg, #5856D6 0%, #5E5CE6 100%)
		&:hover
			box-shadow 0 0 15px #5E5CE6
			

.checkbox
	margin-bottom 28px
	margin-right 32px
	input
		position absolute
		opacity 0
		pointer-events none
		+label
			font-size 18px
			line-height 21px
			padding-left 42px
			cursor pointer
			position relative
			&:last-child
				margin-right 0
			
			&:before
				cursor pointer
			&:after
				content ''
				position absolute
				left 0
				top 0
				height 22px
				width 22px
				border-radius 5px
				border 1px solid #E7E7E7
				background white
				cursor pointer
		
		&:checked
			+label
				&:after
					background-color #31B0D9
					border 1px solid #31B0D9
				
				&:before
					content ''
					position absolute
					left 8px
					top 1px
					width 13px
					height 16px
					z-index 2
					background-image url('~@/assets/images/icon_check.svg')
					background-size cover

.input
	&-add
		position relative
		input
			height 40px
			border-radius 8px
			border 1px solid #C2C9D1
			min-width 210px
			padding-left 15px
			font-size 14px
			t()

			&:focus
				border 1px solid #3E66FB
	&-search
		position relative
		input
			height 40px
			border-radius 8px
			border 1px solid #C2C9D1
			min-width 210px
			padding-left 38px
			font-size 14px
			t()

			&:focus
				border 1px solid #3E66FB
		
		&:after
			content ''
			position absolute
			left 8px
			top 10px
			width 20px
			height 20px
			background-image url('~@/assets/images/icon_search.svg')
			background-size: cover
			z-index 2

.textarea
	border-radius 8px
	border 1px solid #C2C9D1
	padding 15px
	font-size 14px
	width 100%
	t()
	&:focus
		border 1px solid #3E66FB

.block
	filter $shadow
	width 100%
	min-height 200px
	padding 50px 35px
	border-radius 20px
	background white
	margin-bottom 40px

	h4
		padding-bottom 24px
	
	&-none
		display flex
		justify-content center
		align-items center
		h4
			text-align center

.scroll-down
	display flex
	flex-direction column
	align-items center
	justify-content center
	right 0
	left 0
	bottom 50px
	position absolute
	pointer-events none
	opacity 0.7

	&__text
		text-align center
		white-space nowrap
		font-size 14px
		font-weight 500
		padding-bottom 10px
		color #31b0d9
	
	img
		max-width 30px
		t()
		animation sliding 1s ease-in-out infinite

@keyframes sliding {
	0% {
		transform: translateY(0)
	}
	50% {
		transform: translateY(10px)
	}
	100% {
		transform: translateY(0px)
	}
}

::-webkit-scrollbar-button
	background-image url('')
	background-repeat no-repeat
	width 5px
	height 0px

::-webkit-scrollbar-track
	background-color #ecedee
	-webkit-border-radius 50px
	border-radius 50px


::-webkit-scrollbar-thumb
	-webkit-border-radius 50px
	border-radius 50px
	background-color #6dc0c8

::-webkit-scrollbar-thumb:hover
	background-color #56999f

::-webkit-resizer
	background-image url('')
	background-repeat no-repeat
	width 4px
	height 0px


::-webkit-scrollbar
	width 4px
::-webkit-scrollbar:horizontal
	height 10px
