.modal
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background-color rgba(0,0,0, 0.5)
    z-index 10
    t()
    
    .wrap
        height 100%
        center()

    &-body
        padding 60px 35px
        text-align center
        background white
        border-radius 20px
        min-height 400px
        width 100%
    
    &-list
        display flex
        flex-wrap wrap
    
    &-close
        position absolute
        right 50px
        top 50px
        width 40px
        cursor pointer
        t()
        img
            width 100%
        
        &:hover
            opacity 0.7