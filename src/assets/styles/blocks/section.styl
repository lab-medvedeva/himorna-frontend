.section
    padding 100px 0
    padding-bottom 40px
    background-color #F8F8FB
    h2
        text-align center

    &.research
        .table
            margin-top 64px
    &-title
        font-size 36px
        padding-bottom 12px
        text-align center

    &-text
        color #9191A4
        text-align center
        font-size 18px
        color #9191A4
        max-width 600px
        margin 0 auto
        line-height 30px
    
    &-block
        margin-top 120px
        display flex
        align-items center
        justify-content space-between

        &:nth-child(even)
            flex-direction row-reverse
            .section-content
                // padding-left 100px
                padding-right 0
    
    &-image
        min-width 50%
        height 480px
        background-color white
        border-radius 20px
        background-size cover
        background-size contain
        background-position center
        background-repeat no-repeat
    
    &-content
        display flex
        flex-direction column
        align-items center
        // padding-right 100px