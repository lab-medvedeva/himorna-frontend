.welcome
    width 100%
    height calc(100vh - 96px)
    position relative

    .wrap
        height 100%
        display flex
        align-items center
        
    
    &-image
        // min-width 676px
        padding-right 110px
        width 60%
        +to-width(1200px)
            display none

    &-content
        text-align: center
        font-size: 36px
        display flex
        flex-direction column
        align-items center
        
        +to-width(1200px)
            padding-left 0
            display flex
            flex-direction column
            align-items center
            text-align center
    